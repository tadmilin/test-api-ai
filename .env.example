# Database connection string
DATABASE_URI=mongodb://127.0.0.1/your-database-name

# Or use a PG connection string
#DATABASE_URI=postgresql://127.0.0.1:5432/your-database-name

# Used to encrypt JWT tokens
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Used to configure CORS, format links and more. No trailing slash
# ⚠️ IMPORTANT: Change to your production URL for Webhook support
# Example: https://your-domain.vercel.app
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE

# Used to validate preview requests
PREVIEW_SECRET=YOUR_SECRET_HERE

# Google AI API key for Gemini Vision (photoType detection)
GOOGLE_AI_API_KEY=AIzaSy...

# Replicate API token for Nano-Banana image enhancement
REPLICATE_API_TOKEN=r8_...

# Replicate webhook signing secret (optional, for webhook verification)
# Get from: https://api.replicate.com/v1/webhooks/default/secret
# Format: whsec_...
REPLICATE_WEBHOOK_SECRET=whsec_...

# Python service URL for collage generation (NEW!)
PYTHON_SERVICE_URL=http://localhost:8000
REPLICATE_API_TOKEN=

# Vercel Blob storage for images (NEW!)
BLOB_READ_WRITE_TOKEN=vercel_blob_...

# Google Service Account for Drive & Sheets API
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Google Drive API (for picker)
GOOGLE_DRIVE_API_KEY=AIza...
GOOGLE_CLIENT_ID=...apps.googleusercontent.com
GOOGLE_APP_ID=...
